@using System.Security.Claims
@inject LMS.Views.Data.ApplicationDbContext _context

@{
    Layout = null;
    ViewBag.Title = "Dashboard";

    var isAdmin = User?.IsInRole("Admin") == true;
    var isInstructor = User?.IsInRole("Instructor") == true;
    var isStudent = User?.IsInRole("Student") == true;

    var userName = User.Identity?.Name ?? "Admin";
    var userIdClaim = User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value;
    var userRole = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
    int userId = 0;
    int.TryParse(userIdClaim, out userId);

    string displayName = userName;
    string profileImg = "/Images/admin.png"; // Default fallback

    if (userRole == "Instructor")
    {
        var instructor = _context.Instructors.FirstOrDefault(i => i.UserId == userId);
        if (instructor != null)
        {
            displayName = $"{instructor.FirstName} {instructor.LastName}";
            if (!string.IsNullOrEmpty(instructor.ProfileImagePath))
            {
                profileImg = "/" + instructor.ProfileImagePath;
            }
            else
            {
                profileImg = "/Images/default-avatar.png"; // We'll handle this path
            }
        }
    }
    else if (userRole == "Student")
    {
        var student = _context.Students.FirstOrDefault(s => s.UserId == userId);
        if (student != null)
        {
            displayName = $"{student.FirstName} {student.LastName}";
            if (!string.IsNullOrEmpty(student.ProfileImagePath))
            {
                profileImg = "/" + student.ProfileImagePath;
            }
            else
            {
                profileImg = "/Images/default-avatar.png";
            }
        }
    }
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - LMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Theme CSS -->
    <link href="~/css/theme.css" rel="stylesheet" />

    <style>
        /* Layout Specific Adjustments */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: var(--sidebar-width);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 1040;
            overflow-y: auto;
        }

        .sidebar-header {
            height: var(--topbar-height);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: 1px;
        }

        .user-panel {
            padding: 20px;
            text-align: center;
        }

        .user-panel img {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            border: 3px solid rgba(0,0,0,0.1);
            margin-bottom: 10px;
            object-fit: cover;
        }

        .user-dropdown img {
            width: 32px;
            height: 32px;
            object-fit: cover;
        }
        
        .smaller { font-size: 0.75rem; }

        .nav-link {
            padding: 12px 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.2s;
            border-left: 3px solid transparent;
            margin: 4px 0;
        }

        .main-content {
            margin-left: var(--sidebar-width);
            transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .topbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 24px;
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .toggle-btn {
            background: transparent;
            border: none;
            color: var(--theme-text-secondary);
            font-size: 1.25rem;
            cursor: pointer;
            padding: 4px;
            border-radius: 4px;
        }
        .toggle-btn:hover { background: var(--theme-bg-secondary); }

        .content-area {
            padding: 24px;
            flex: 1;
        }

        /* Collapsed State (Desktop) */
        body.collapsed .sidebar { width: var(--sidebar-collapsed-width); }
        body.collapsed .main-content { margin-left: var(--sidebar-collapsed-width); }
        body.collapsed .sidebar-header span,
        body.collapsed .user-panel div,
        body.collapsed .nav-link span,
        body.collapsed .nav-link .ms-auto { display: none; }
        body.collapsed .user-panel img { width: 40px; height: 40px; margin: 0; }
        body.collapsed .user-panel { padding: 10px 5px; }

        /* Mobile Responsiveness */
        @@media (max-width: 991.98px) {
            .sidebar { transform: translateX(-100%); }
            .main-content { margin-left: 0 !important; }
            
            body.show-sidebar .sidebar { transform: translateX(0); box-shadow: 4px 0 24px rgba(0,0,0,0.15); }
            body.show-sidebar .sidebar-overlay { 
                display: block; 
                position: fixed; 
                inset: 0; 
                background: rgba(0,0,0,0.4); 
                z-index: 1035; 
            }
        }
    </style>
</head>

<body>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <div class="sidebar" id="sidebar">
            <div class="text-center fs-4 fw-bold mb-3">
                <span class="d-inline-block">LMS</span>
            </div>
            <div class="user-panel mb-3">
                <img src="~/Images/admin.png" alt="User Avatar" />
                <div class="mt-2"><small>
                        @(isAdmin ? "Administrator" : isInstructor ? "Instructor" : isStudent ? "Student" : "User")
                    </small></div>
            </div>
            <ul class="nav flex-column">
                @if (isAdmin)
                {
                    <li><a href="@Url.Action("Dashboard", "Admin")" class="nav-link"><i class="fas fa-th-large"></i>
                            <span>Dashboard</span></a></li>
                    <li><a href="@Url.Action("CreateInstructor", "Admin")" class="nav-link"><i class="fas fa-chalkboard-teacher"></i> <span>Create Instructor</span></a></li>

                    <li><a href="@Url.Action("CreateStudent", "Admin")" class="nav-link"><i class="fas fa-user-plus"></i> <span>Create Student</span></a></li>
                    <li><a href="@Url.Action("StudentList", "Admin")" class="nav-link"><i class="fas fa-list"></i> <span>Student List</span></a></li>
                    <li><a href="@Url.Action("InstructorList", "Admin")" class="nav-link"><i class="fas fa-user-graduate"></i>
                            <span>Instructor List</span></a></li>
                    <li><a href="@Url.Action("PendingInstructors", "Admin")" class="nav-link"><i class="fas fa-hourglass-half"></i> <span>Pending Approvals</span></a></li>
                }
                else if (isInstructor)
                {
                    <li><a href="@Url.Action("Dashboard", "Instructor")" class="nav-link"><i class="fas fa-th-large"></i>
                            <span>Dashboard</span></a></li>
                    <!-- Students collapsible menu -->
                    <li>
                        <a class="nav-link" data-bs-toggle="collapse" href="#studentsMenu" role="button" aria-expanded="false"
                            aria-controls="studentsMenu">
                            <i class="fas fa-users"></i> <span>Students</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <div class="collapse" id="studentsMenu">
                            <ul class="nav flex-column ms-3">
                                <li><a href="@Url.Action("EnrollStudents", "Instructor")" class="nav-link"><i
                                            class="fas fa-user-plus"></i> <span>Add Students</span></a></li>
                                <li><a href="@Url.Action("StudentList", "Instructor")" class="nav-link"><i
                                            class="fas fa-list"></i> <span>Student List</span></a></li>
                            </ul>
                        </div>
                    </li>
                    <!-- Courses collapsible menu -->
                    <li>
                        <a class="nav-link" data-bs-toggle="collapse" href="#coursesMenu" role="button" aria-expanded="false"
                            aria-controls="coursesMenu">
                            <i class="fas fa-book"></i> <span>Courses</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <div class="collapse" id="coursesMenu">
                            <ul class="nav flex-column ms-3">
                                <li>
                                    <a href="@Url.Action("CreateCourse", "Instructor")" class="nav-link">
                                        <i class="fas fa-plus"></i> <span>Create Course</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Course", "Instructor")" class="nav-link">
                                        <i class="fas fa-list"></i> <span>My Courses</span>
                                    </a>
                                </li>

                               
                            </ul>
                        </div>

                    </li>



                }
                else if (isStudent)
                {
                    <li><a href="@Url.Action("Dashboard", "Student")" class="nav-link"><i class="fas fa-th-large"></i>
                            <span>Dashboard</span></a></li>
                    <li><a href="@Url.Action("MyCourses", "Student")" class="nav-link"><i class="fas fa-book"></i> <span>My
                                Courses</span></a></li>
                    <li><a href="@Url.Action("MySubmissions", "Student")" class="nav-link"><i class="fas fa-list"></i> <span>My
                                Results/Grades </span></a></li>
                }
            </ul>
        </div>
        <div class="sidebar-overlay" id="sidebarOverlay" onclick="closeSidebar()"></div>

        <div class="main-content" id="mainContent">
            <div class="topbar d-flex align-items-center justify-content-between">
                <div class="topbar-left d-flex align-items-center">
                    <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="fw-semibold fs-5 ms-2">Welcome, @userName</div>
                </div>

                <div class="topbar-right d-flex align-items-center gap-3">
                    <a href="#" class="icon-btn position-relative" title="Messages">
                        <i class="fas fa-envelope"></i>
                        <span
                            class="badge rounded-pill bg-primary position-absolute top-0 start-100 translate-middle">5</span>
                    </a>

                    <!-- Notification dropdown toggle button -->
                      <a class="nav-link position-relative" href="#" id="notificationIcon" role="button"
       data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-bell-fill fs-4"></i> <!-- Enlarged icon -->
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="notificationBadge" style="display:none;">
            0
        </span>
    </a>

                    <!-- Dropdown menu -->
                    <ul class="dropdown-menu dropdown-menu-end p-0"
                        style="width: 320px; max-height: 400px; overflow-y: auto;" id="notificationDropdown">

                        <div class="px-3 py-2 d-flex justify-content-between border-bottom">
                            <h6 class="mb-0">Notifications</h6>
                            <small><a href="#" id="markAllRead">Mark all as read</a></small>
                        </div>

                        <div id="notificationList" class="p-2">
                            <!-- Notifications will be inserted here -->
                            <div class="text-center text-muted py-2" id="noNotifications" style="display: none;">
                                No notifications found.
                            </div>
                        </div>

                        <div class="px-3 py-2 border-top text-center" id="viewAllContainer" style="display: none;">
                            <a href="/Notification/Index">View All</a>
                        </div>
                    </ul>



                    <div class="dropdown user-dropdown ms-2">
                        <a class="dropdown-toggle d-flex align-items-center text-dark text-decoration-none" href="#"
                            id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="profile-img-container me-2">
                                <img src="@profileImg" class="rounded-circle" onerror="this.src='/Images/admin.png'; this.onerror=null;" />
                            </div>
                            <div class="d-flex flex-column">
                                <span class="fw-bold lh-1 small">@displayName</span>
                                <span class="text-muted smaller">@userRole</span>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                             <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")"><i
                                         class="fas fa-user-circle me-2"></i> My Profile</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Settings", "Account")"><i
                                        class="fas fa-cog me-2"></i> Settings</a></li>
                            
                            <li>
                                <hr class="dropdown-divider" />
                            </li>
                            <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")"><i
                                        class="fas fa-power-off me-2"></i> Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="p-4 content-area">
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        <div class="container mt-5">
            @RenderBody()
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/js/site.js"></script> *@
    <script>
        // Sidebar toggle logic
        function toggleSidebar() {
            const width = window.innerWidth;
            if (width < 992) {
                document.body.classList.toggle('show-sidebar');
            } else {
                document.body.classList.toggle('collapsed');
            }
        }

        function closeSidebar() {
            document.body.classList.remove('show-sidebar');
        }

        // Close sidebar when clicking overlay
        document.getElementById('sidebarOverlay').addEventListener('click', closeSidebar);


        // Responsive behavior: remove mobile show class on resize to desktop
        window.addEventListener('resize', function () {
            if (window.innerWidth >= 992) {
                document.body.classList.remove('show-sidebar');
            }
        });

        // Notification loading and management
        document.addEventListener('DOMContentLoaded', function () {
            loadNotifications();
        });

       function loadNotifications() {
    fetch('/Notification/GetUserNotifications')
        .then(response => response.json())
        .then(data => {
            const list = document.getElementById('notificationList');
            const badge = document.getElementById('notificationBadge');
            const viewAll = document.getElementById('viewAllContainer');

            list.innerHTML = '';

            if (data.length === 0) {
                list.innerHTML = '<div class="text-center text-muted">No notifications</div>';
                badge.style.display = 'none';
                viewAll.style.display = 'none';
                return;
            }

            let unreadCount = 0;

            data.forEach(n => {
                if (!n.isRead) unreadCount++;

                const item = document.createElement('a');
                item.href = n.actionUrl || '#';
                item.className = 'dropdown-item d-flex align-items-start gap-2 border-bottom py-2';
                item.innerHTML = `
                    <i class="${n.iconClass || 'bi bi-bell'} text-primary fs-5"></i>
                    <div>
                        <strong>${n.title}</strong><br />
                        <small class="text-muted">${n.message}</small><br />
                        <small class="text-muted">${new Date(n.createdAt).toLocaleString()}</small>
                    </div>
                `;
                list.appendChild(item);
            });

            // Show or hide badge
            if (unreadCount > 0) {
                badge.innerText = unreadCount;
                badge.style.display = 'inline-block';
            } else {
                badge.style.display = 'none';
            }

            // Show view all if more than 5
            viewAll.style.display = data.length > 5 ? 'block' : 'none';
        });
}

document.getElementById('markAllRead').addEventListener('click', function (e) {
    e.preventDefault();
    fetch('/Notification/MarkAllAsRead', { method: 'POST' })
        .then(() => {
            loadNotifications();
        });
});

// Initial load
loadNotifications();

// Refresh every 30 seconds


  
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

    </script>
    
    <!-- Theme Toggle Script -->
    <script src="~/js/theme-toggle.js"></script>
    
    <!-- Theme Toggle Button -->
    <button class="theme-toggle-btn" onclick="toggleTheme()" title="Toggle dark/light mode">
        <i class="fas fa-moon"></i>
    </button>
    
    @RenderSection("Scripts", required: false)
</body>

</html>
