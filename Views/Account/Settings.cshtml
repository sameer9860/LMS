@model LMS.ViewModels.ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
    ViewBag.Title = "Account Settings";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient-dark text-white p-4">
                    <h4 class="mb-0"><i class="fas fa-cog me-2"></i> Account Settings</h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="card-title mb-4 text-muted small text-uppercase fw-bold letter-spacing-1">Change Password</h5>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success border-0 shadow-sm mb-4">
                            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label small fw-bold">Current Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input asp-for="OldPassword" class="form-control border-start-0 ps-0" placeholder="Enter current password" />
                            </div>
                            <span asp-validation-for="OldPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label small fw-bold">New Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted">
                                    <i class="fas fa-key"></i>
                                </span>
                                <input asp-for="NewPassword" class="form-control border-start-0 ps-0" placeholder="Min. 6 characters" />
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label small fw-bold">Confirm New Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted">
                                    <i class="fas fa-check-double"></i>
                                </span>
                                <input asp-for="ConfirmPassword" class="form-control border-start-0 ps-0" placeholder="Repeat new password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark p-2 fw-bold">
                                <i class="fas fa-shield-alt me-2"></i> Update Password
                            </button>
                            <a asp-action="Profile" class="btn btn-outline-secondary p-2">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4 alert alert-info border-0 shadow-sm small">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Tip:</strong> Use a strong password with at least 6 characters and a mix of letters, numbers, and symbols for better security.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["PasswordChanged"] != null)
        {
            var userRole = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
            var dashboardUrl = Url.Action("Dashboard", userRole);
            
            <text>
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'Your password has been changed successfully. Redirecting you to the dashboard...',
                timer: 2000,
                showConfirmButton: false,
                willClose: () => {
                    window.location.href = '@dashboardUrl';
                }
            });
            </text>
        }
    </script>
}
