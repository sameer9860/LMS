@model List<LMS.Models.Course>
@{
    ViewBag.Title = "My Courses";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<h2 class="mb-4">My Courses</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You are not enrolled in any courses yet.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var course in Model)
        {
            <div class="col">
                <a asp-action="CourseDetails" asp-route-id="@course.Id" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 clickable-card">
                        <img src="~/@(string.IsNullOrEmpty(course.ImagePath) ? "images/default-course.png" : course.ImagePath)"
                             class="card-img-top" alt="@course.FullName" style="height:180px; object-fit:cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@course.FullName</h5>
                            <p class="card-text text-muted" style="min-height:48px;">
                                @(string.IsNullOrEmpty(course.Summary) 
                                    ? "No summary provided." 
                                    : (course.Summary.Length > 100 
                                        ? course.Summary.Substring(0, 100) + "..." 
                                        : course.Summary))
                            </p>
                           
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}

<style>
    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .card-text {
        font-size: 0.95rem;
    }

    .clickable-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .clickable-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    a.text-decoration-none.text-dark:hover {
        text-decoration: none;
        color: inherit;
    }
</style>
