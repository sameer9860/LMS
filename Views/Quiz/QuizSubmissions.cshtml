@model List<LMS.Models.QuizSubmission>

@{
    ViewData["Title"] = "Quiz Submissions";
    var quiz = ViewBag.Quiz as LMS.Models.Quiz;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Quiz Submissions</h2>
            <p class="text-muted">
                <strong>Quiz:</strong> @quiz.Title <br />
                <strong>Description:</strong> @quiz.Description
            </p>
        </div>
        <a asp-controller="Instructor" asp-action="CourseDetails" asp-route-id="@quiz.CourseId" 
           class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Course
        </a>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Student Name</th>
                        <th>Score</th>
                        <th>Percentage</th>
                        <th>Status</th>
                        <th>Submitted At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var submission in Model)
                    {
                        var percentage = submission.TotalQuestions > 0 
                            ? (submission.Score ?? 0) * 100.0 / submission.TotalQuestions
                            : 0;
                        var isGraded = submission.Score.HasValue;
                        
                        <tr>
                            <td>
                                <strong>@submission.Student?.User?.Username</strong><br />
                                <small class="text-muted">
                                    @(submission.Student?.FirstName + " " + submission.Student?.LastName)
                                </small>
                            </td>
                            <td>
                                @if (isGraded)
                                {
                                    <span class="badge bg-info">
                                        @(submission.Score ?? 0) / @(submission.TotalQuestions ?? 0)
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">-</span>
                                }
                            </td>
                            <td>
                                @if (isGraded)
                                {
                                    <span class="badge @(percentage >= 70 ? "bg-success" : percentage >= 50 ? "bg-warning" : "bg-danger")">
                                        @percentage%
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">-</span>
                                }
                            </td>
                            <td>
                                @if (isGraded)
                                {
                                    <span class="badge bg-success">Graded</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending to Grade</span>
                                }
                            </td>
                            <td>
                                @if (submission.SubmittedAt != null)
                                {
                                    <small>@submission.SubmittedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                }
                                else
                                {
                                    <small class="text-muted">Not submitted</small>
                                }
                            </td>
                            <td>
                                @if (submission.SubmittedAt != null)
                                {
                                    <a asp-action="QuizResult" asp-route-submissionId="@submission.Id" 
                                       class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No submissions yet for this quiz.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Optional: Add sorting/filtering functionality here
    </script>
}
