@model LMS.Controllers.TakeQuizViewModel

@{
    ViewData["Title"] = "Take Quiz - " + Model.Title;
}

<h2>@Model.Title</h2>

<form asp-action="SubmitQuiz" method="post">
    <input type="hidden" name="QuizId" value="@Model.QuizId" />

    @for (int i = 0; i < Model.MCQs.Count; i++)
    {
        var question = Model.MCQs[i];
        <div class="card mb-3 p-3">
            <p><strong>Q@(i + 1):</strong> @question.Question</p>

            @for (int j = 0; j < question.Options.Count; j++)
            {
                var option = question.Options[j];
                var inputId = $"q{i}_option{j}";
                <div class="form-check">
                    <input class="form-check-input" type="radio" 
                           id="@inputId" 
                           name="Answers[@i]" 
                           value="@option" required />
                    <label class="form-check-label" for="@inputId">@option</label>
                </div>
            }
        </div>
    }

    <button type="submit" class="btn btn-primary">Submit Quiz</button>
</form>
