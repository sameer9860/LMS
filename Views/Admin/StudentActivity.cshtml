@model ActivityLogFilterViewModel

@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<div class="mb-3">
    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-link">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to Admin Dashboard
    </a>
</div>

<h2 class="mb-3">
    <i class="bi bi-person-lines-fill me-2"></i> Student Activity - @(Model.StudentId ?? "Unknown")
</h2>

<div class="card shadow-sm mb-4">
    <div class="card-header d-flex align-items-center">
        <i class="bi bi-funnel me-2"></i> <strong>Filter Logs</strong>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <input type="hidden" name="StudentId" value="@Model.StudentId" />

            <div class="col-12 col-md-3">
                <label class="form-label small text-muted text-uppercase fw-bold">Course ID</label>
                <input type="text" class="form-control form-control-sm" name="CourseId" value="@Model.CourseId" placeholder="e.g. 101" />
                <small class="text-muted">Course ID to filter by</small>
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label small text-muted text-uppercase fw-bold">Activity Type</label>
                <select class="form-select form-select-sm" name="ActivityType">
                    <option value="">All Activities</option>
                    @foreach (var type in Enum.GetValues(typeof(ActivityType)))
                    {
                        <option value="@type" selected="@(Model.ActivityType != null && Model.ActivityType.ToString() == type.ToString())">
                            @type
                        </option>
                    }
                </select>
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label small text-muted text-uppercase fw-bold">Date Range</label>
                <div class="row g-2">
                    <div class="col-6">
                        <input type="date" class="form-control form-control-sm" name="FromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" title="From Date" />
                    </div>
                    <div class="col-6">
                        <input type="date" class="form-control form-control-sm" name="ToDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" title="To Date" />
                    </div>
                </div>
            </div>

            <div class="col-12 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary btn-sm px-4">
                    <i class="bi bi-search me-2"></i> Apply Filters
                </button>
                <a href="@Url.Action("StudentActivity", "Admin", new { id = Context.Request.RouteValues["id"] })" class="btn btn-secondary btn-sm px-4">
                    <i class="bi bi-arrow-clockwise me-2"></i> Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Results Summary -->
@if (Model.Logs != null && Model.Logs.Any())
{
    <div class="alert alert-info mb-3">
        <i class="bi bi-info-circle me-2"></i>
        Found <strong>@Model.Logs.Count</strong> activity log(s)
    </div>
}

<div class="table-responsive shadow-sm rounded">
    <table class="table table-bordered table-striped table-hover align-middle mb-0">
        <thead>
            <tr>
                <th class="text-nowrap">
                    <i class="bi bi-calendar-event me-1"></i> Timestamp
                </th>
                <th class="text-nowrap">
                    <i class="bi bi-activity me-1"></i> Activity
                </th>
                <th class="text-nowrap">
                    <i class="bi bi-book me-1"></i> Course
                </th>
                <th class="text-nowrap">
                    <i class="bi bi-file-earmark me-1"></i> Resource
                </th>
                <th class="text-nowrap">
                    <i class="bi bi-hourglass me-1"></i> Duration (sec)
                </th>
                <th class="text-nowrap">
                    <i class="bi bi-globe me-1"></i> IP Address
                </th>
                <th class="text-nowrap">
                    <i class="bi bi-browser-chrome me-1"></i> Browser
                </th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Logs != null && Model.Logs.Any())
            {
                @foreach (var log in Model.Logs)
                {
                    <tr>
                        <td class="text-nowrap">
                            <small>@log.Timestamp.LocalDateTime.ToString("dd/MM/yyyy HH:mm")</small>
                        </td>
                        <td>
                            <span class="badge bg-primary">@log.ActivityType</span>
                        </td>
                        <td>
                            <small>@(log.CourseName ?? "N/A")</small>
                        </td>
                        <td>
                            <small class="text-truncate d-inline-block" style="max-width: 150px;" title="@log.ResourceTitle">
                                @(log.ResourceTitle ?? "N/A")
                            </small>
                        </td>
                        <td>
                            <small>@log.DurationSeconds</small>
                        </td>
                        <td>
                            <small class="font-monospace">@(log.IpAddress ?? "N/A")</small>
                        </td>
                        <td>
                            <small class="text-truncate d-inline-block" style="max-width: 150px;" title="@log.UserAgent">
                                @(log.UserAgent ?? "N/A")
                            </small>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted py-4">
                        <i class="bi bi-inbox me-2"></i> No activity logs found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
