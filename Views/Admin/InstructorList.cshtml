@model InstructorFilterViewModel

@{
    ViewBag.Title = "Instructor List";
    int sn = 1;
}

<h2>Instructor List</h2>

<!-- Filter Card -->
<div class="card shadow-sm mb-4">
    <div class="card-header">
        <i class="bi bi-funnel me-2"></i> Filter Instructors
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-3">
                <label class="form-label small text-muted text-uppercase fw-bold">Search by Name</label>
                <input type="text" class="form-control form-control-sm" name="SearchQuery" value="@Model.SearchQuery" placeholder="First, Middle, or Last Name" />
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label small text-muted text-uppercase fw-bold">Email</label>
                <input type="email" class="form-control form-control-sm" name="Email" value="@Model.Email" placeholder="e.g. instructor@example.com" />
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label small text-muted text-uppercase fw-bold">Phone Number</label>
                <input type="text" class="form-control form-control-sm" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="e.g. 98xxxxxxxx" />
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label small text-muted text-uppercase fw-bold">Qualification</label>
                <input type="text" class="form-control form-control-sm" name="Qualification" value="@Model.Qualification" placeholder="e.g. M.Tech, B.Tech" />
            </div>

            <div class="col-12 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary btn-sm px-4">
                    <i class="bi bi-search me-2"></i> Search
                </button>
                <a href="@Url.Action("InstructorList")" class="btn btn-secondary btn-sm px-4">
                    <i class="bi bi-arrow-clockwise me-2"></i> Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Results Summary -->
@if (Model.Instructors != null && Model.Instructors.Any())
{
    <div class="alert alert-info mb-3">
        <i class="bi bi-info-circle me-2"></i>
        Found <strong>@Model.Instructors.Count</strong> instructor(s)
    </div>
}

<div class="table-responsive shadow-sm rounded">
<table class="table table-bordered table-striped align-middle mb-0">
    <thead>
        <tr>
            <th class="text-nowrap">S.N.</th>
            <th class="text-nowrap">Full Name</th>
            <th class="text-nowrap">Email</th>
            <th class="text-nowrap">Phone Number</th>
            <th class="text-nowrap">Qualification</th>
            <th class="text-nowrap" style="width: 140px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Instructors != null && Model.Instructors.Any())
        {
            @foreach (var instructor in Model.Instructors)
            {
                <tr>
                    <td>@sn</td>
                    <td>
                        @instructor.FirstName
                        @(string.IsNullOrWhiteSpace(instructor.MiddleName) ? "" : instructor.MiddleName + " ")
                        @instructor.LastName
                    </td>
                    <td>@instructor.Email</td>
                    <td>@instructor.PhoneNumber</td>
                    <td>@instructor.Qualification</td>
                    <td>
                        <div class="d-flex gap-1 justify-content-center">
                            <a asp-action="EditInstructor" asp-route-id="@instructor.id" class="btn btn-sm btn-outline-primary"
                                title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <button type="button" class="btn btn-sm btn-outline-danger" title="Delete" data-bs-toggle="modal"
                                data-bs-target="#deleteConfirmModal" data-id="@instructor.id"
                                data-username="@instructor.User?.Username">
                                <i class="bi bi-trash3"></i>
                            </button>

                            <a asp-action="InstructorProfile" asp-route-id="@instructor.id"
                                class="btn btn-sm btn-outline-secondary" title="View Profile">
                                <i class="bi bi-person-circle"></i>
                            </a>

                            @* Course creation permission indicator and Grant/Revoke buttons *@
                            <div class="d-flex align-items-center ms-2">
                                @if (instructor.IsCourseCreationAllowed)
                                {
                                    <span class="badge bg-success me-2">Course Create: Allowed</span>

                                    <form asp-action="RevokeCourseCreation" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@instructor.id" />
                                        <button type="submit" class="btn btn-sm btn-outline-warning" title="Revoke Permission">
                                            <i class="bi bi-lock-fill"></i>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="badge bg-secondary me-2">Course Create: Denied</span>

                                    <form asp-action="GrantCourseCreation" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@instructor.id" />
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Grant Permission">
                                            <i class="bi bi-unlock-fill"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </td>
                </tr>
                sn++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted py-4">
                    <i class="bi bi-inbox me-2"></i> No instructors found
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete instructor: <strong id="instructorUsername"></strong>?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // SweetAlert Success Message
        @if (TempData["Success"] != null)
            {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: '@TempData["Success"]'
                });
            </text>
        }


            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'success',
                    title: 'Success',
                     text: '@TempData["SuccessMessage"]'
                });

                </text>
        }

            // SweetAlert Error Message
            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: '@TempData["ErrorMessage"]'
                    });

                </text>
        }

                            // Populate Delete Modal
                            const deleteConfirmModal = document.getElementById('deleteConfirmModal');
        deleteConfirmModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const instructorId = button.getAttribute('data-id');
            const username = button.getAttribute('data-username');

            const deleteForm = document.getElementById('deleteForm');
            const usernameSpan = document.getElementById('instructorUsername');

            deleteForm.action = '/Admin/DeleteInstructor/' + instructorId;
            usernameSpan.textContent = username;
        });
    </script>
}
