@model Instructor

@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
    ViewBag.Title = "My Profile";
}

<div class="container py-4">
    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="card-header bg-gradient-success text-white p-4">
            <h3 class="mb-0">My Instructor Profile</h3>
        </div>
        <div class="card-body p-4 row">
            <div class="col-md-4 text-center border-end">
                <div class="position-relative d-inline-block">
                    <img src="@(string.IsNullOrEmpty(Model.ProfileImagePath) ? "/Images/admin.png" : "/" + Model.ProfileImagePath)" 
                         class="img-thumbnail rounded-circle mb-3 shadow-sm" style="width: 200px; height: 200px; object-fit: cover;" 
                         onerror="this.src='/Images/admin.png'; this.onerror=null;" alt="Profile Image" />
                </div>
                <h4 class="fw-bold mt-3">@Model.FirstName @Model.LastName</h4>
                <p class="text-muted">@@@Model.User?.Username</p>
                <span class="badge bg-success px-3 py-2 rounded-pill">Instructor</span>
            </div>
            <div class="col-md-8">
                <div class="ps-md-4">
                    <h5 class="text-uppercase letter-spacing-1 small fw-bold text-muted mb-4">Professional Information</h5>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label class="small text-muted mb-1">Email Address</label>
                            <p class="fw-medium">@Model.Email</p>
                        </div>
                        <div class="col-sm-6">
                            <label class="small text-muted mb-1">Phone Number</label>
                            <p class="fw-medium">@Model.PhoneNumber</p>
                        </div>
                        <div class="col-sm-6">
                            <label class="small text-muted mb-1">Qualification</label>
                            <p class="fw-medium">@Model.Qualification</p>
                        </div>
                        <div class="col-sm-6">
                            <label class="small text-muted mb-1">Expertise</label>
                            <p class="fw-medium">@Model.Expertise</p>
                        </div>
                        <div class="col-sm-6">
                            <label class="small text-muted mb-1">Experience</label>
                            <p class="fw-medium">@Model.YearsOfExperience Years</p>
                        </div>
                    </div>

                    <hr class="my-4 opacity-50" />

                    <h5 class="text-uppercase letter-spacing-1 small fw-bold text-muted mb-4">Biography</h5>
                    <p class="text-muted">@(string.IsNullOrEmpty(Model.Bio) ? "No biography provided." : Model.Bio)</p>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light p-3 text-end">
            <a asp-action="Settings" asp-controller="Account" class="btn btn-outline-dark me-2">
                <i class="fas fa-cog me-1"></i> Settings
            </a>
            <a asp-action="Dashboard" class="btn btn-outline-secondary me-2">Back to Dashboard</a>
            <button class="btn btn-success px-4" onclick="Swal.fire('Edit Profile', 'Please contact the system administrator to update your professional details.', 'info')">
                <i class="fas fa-edit me-2"></i> Request Change
            </button>
        </div>
    </div>
</div>
