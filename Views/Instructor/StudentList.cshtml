@model List<Student>

@{
    ViewBag.Title = "Student List";
    int sn = 1;
}

<h2>Student List</h2>

<div class="table-responsive shadow-sm rounded">
<table class="table table-bordered table-striped align-middle mb-0">
    <thead class="table-dark">
        <tr>
            <th class="text-nowrap">S.N.</th>
            <th class="text-nowrap">Full Name</th>
            <th class="text-nowrap">Date of Birth</th>
            <th class="text-nowrap">Guardian Name</th>
            <th class="text-nowrap">Grade</th>
            <th class="text-nowrap" style="width: 140px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@sn</td>
                <td>@student.FirstName @student.MiddleName @student.LastName</td>
                <td>@student.DateOfBirth.ToShortDateString()</td>
                <td>@student.GuardianName</td>
                <td>@student.Grade</td>
                <td>
                    <div class="d-flex gap-1 justify-content-center">
                        <a asp-action="EditStudent" asp-route-id="@student.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <button type="button" class="btn btn-sm btn-outline-danger" title="Delete" data-bs-toggle="modal"
                            data-bs-target="#deleteConfirmModal" data-id="@student.Id"
                            data-username="@student.User?.Username">
                            <i class="bi bi-trash3"></i>
                        </button>

                        <a asp-action="StudentProfile" asp-route-id="@student.Id" class="btn btn-sm btn-outline-secondary" title="View Profile">
                            <i class="bi bi-person-circle"></i>
                        </a>
                    </div>
                </td>
            </tr>
            sn++;
        }
    </tbody>
</table>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete student: <strong id="studentUsername"></strong>?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // SweetAlert Success
        @if (TempData["Success"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: '@TempData["Success"]',
                    background: '#d4edda',
                    color: '#155724',
                    confirmButtonColor: '#28a745',
                    customClass: { popup: 'border border-success' }
                });
            </text>
        }
            @if (TempData["SuccessMessage"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: '@TempData["SuccessMessage"]',
                    background: '#d4edda',
                    color: '#155724',
                    confirmButtonColor: '#28a745',
                    customClass: { popup: 'border border-success' }
                });
            </text>
        }

        // SweetAlert Delete/Error
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Deleted',
                    text: '@TempData["ErrorMessage"]',
                    background: '#f8d7da',
                    color: '#721c24',
                    confirmButtonColor: '#dc3545',
                    customClass: { popup: 'border border-danger' }
                });
            </text>
        }

        // Populate Delete Modal
        const deleteConfirmModal = document.getElementById('deleteConfirmModal');
        deleteConfirmModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const studentId = button.getAttribute('data-id');
            const username = button.getAttribute('data-username');

            const deleteForm = document.getElementById('deleteForm');
            const usernameSpan = document.getElementById('studentUsername');

            deleteForm.action = '/Instructor/DeleteStudent/' + studentId;
            usernameSpan.textContent = username;
        });
    </script>
}
