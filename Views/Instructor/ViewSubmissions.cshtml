@model List<AssignmentSubmission>

@{
    ViewBag.Title = "Submissions";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<h4>Student Submissions</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>S.N.</th>
            <th>Student</th>
            <th>Submitted At</th>
            <th>Files</th>
            <th>Marks</th>
            <th>Status</th>
            <th>Action</th> <!-- Grade Button -->
        </tr>
    </thead>
    <tbody>
        @foreach (var submission in Model)
        {
            var isGraded = submission.MarksObtained.HasValue;
            <tr>
                <td>@(Model.IndexOf(submission) + 1) </td>
                <td>@submission.Student?.FirstName @submission.Student?.LastName</td>
                <td>@submission.SubmittedAt.ToShortDateString()</td>
                <td>
                    @if (!string.IsNullOrEmpty(submission.FilePath))
                    {
                        <a href="~/@submission.FilePath" target="_blank">Download</a>
                    }
                </td>
                <td>
                    @if (isGraded)
                    {
                        <strong>@submission.MarksObtained</strong>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>
                    @if (isGraded)
                    {
                        @if (submission.IsPassed == true)
                        {
                            <span class="badge bg-success">Passed</span>
                        }
                        else if (submission.IsPassed == false)
                        {
                            <span class="badge bg-danger">Failed</span>
                        }
                    }
                    else
                    {
                        <span class="badge bg-warning">Pending to Grade</span>
                    }
                </td>
                <td>
                    @if (!isGraded)
                    {
                        <a asp-action="GradeSubmission" asp-route-id="@submission.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i> Grade
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-secondary" disabled title="Already Graded">
                            <i class="bi bi-check-circle"></i> Graded
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SuccessGrade"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: '@TempData["SuccessGrade"]',
                background: '#d4edda',
                color: '#155724',
                confirmButtonColor: '#28a745'
            });
        </script>
    }
}
