@model LMS.ViewModels.CourseDetailsViewModel


@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
    var instructorStudents = ViewBag.StudentsByInstructor as List<LMS.Models.Student>;
    var chatMessages = ViewBag.ChatMessages as List<LMS.Models.ChatMessage> ?? new List<LMS.Models.ChatMessage>();

  

        
}

<div class="container mt-2">
    <!-- ✅ Breadcrumb with icons -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm align-items-center">
            <li class="breadcrumb-item">
                <i class="fas fa-book"></i>
                <a href="@Url.Action("Course", "Instructor")"> My Courses</a>
            </li>
            <li class="breadcrumb-item">
                <i class="fas fa-graduation-cap"></i>
                @Model.Course?.FullName
            </li>
            <li class="breadcrumb-item active text-primary" id="activeTabLabel">
                <i class="fas fa-info-circle"></i> Course
            </li>
        </ol>
    </nav>

    <!-- ✅ Bootstrap 5 Tab Pills -->
    <ul class="nav nav-pills mb-3" id="courseTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="course-tab" data-bs-toggle="tab" data-bs-target="#course" type="button"
                role="tab">
                <i class="fas fa-info-circle"></i> Course
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="participants-tab" data-bs-toggle="tab" data-bs-target="#participants"
                type="button" role="tab">
                <i class="fas fa-users"></i> Participants
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="materials-tab" data-bs-toggle="tab" data-bs-target="#materials" type="button"
                role="tab">
                <span class="badge bg-info"></span><i class="fas fa-upload"></i> Materials
            </button>
        </li>
        <li class="nav-item" role="presentation"></li>
    <button class="nav-link" id="chat-tab" data-bs-toggle="tab" data-bs-target="#chat" type="button" role="tab">
      <i class="fas fa-comments me-1"></i>Chat</span>
    </button>
</li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="assignments-tab" data-bs-toggle="tab" data-bs-target="#assignments"
                type="button" role="tab">
                <i class="fas fa-tasks"></i> Assignments
            </button>
        </li>

<li class="nav-item" role="presentation">
    <button class="nav-link @(ViewContext.HttpContext.Request.Query["tab"] == "live-classes" ? "active" : "")"
            id="live-classes-tab"
            data-bs-toggle="tab"
            data-bs-target="#live-classes"
            type="button"
            role="tab"
            aria-controls="live-classes"
            aria-selected="@(ViewContext.HttpContext.Request.Query["tab"] == "live-classes" ? "true" : "false")">
        <i class="fas fa-video me-2"></i> Live Classes
        @if (Model.LiveClasses?.Count > 0)
        {
            <span class="badge bg-primary ms-2">@Model.LiveClasses.Count</span>
        }
    </button>
</li>

        <li class="nav-item" role="presentation">
            <button class="nav-link" id="editcourse-tab" data-bs-toggle="tab" data-bs-target="#editcourse"
                type="button" role="tab">
                <i class="fas fa-edit"></i> Edit Course
            </button>
        </li>
    </ul>

    <div class="tab-content" id="courseTabContent">


        @* Course Info *@
<div class="tab-pane fade" id="course" role="tabpanel">
            <div class="card shadow-sm mb-3">
                <img src="~/@(string.IsNullOrEmpty(Model.Course?.ImagePath) ? "images/default-course.png" : Model.Course.ImagePath)"
                    class="card-img-top" style="height:220px; object-fit:cover;" />
                <div class="card-body">
                    <h2>@Model.Course?.FullName</h2>
                    <h5 class="text-muted">@Model.Course?.ShortName</h5>
                    <p><strong>Category:</strong> @Model.Course?.Category</p>
                    <p><strong>Course ID Number:</strong> @Model.Course?.CourseIdNumber</p>
                    <p><strong>Start Date:</strong> @Model.Course?.StartDate</p>
                    <p><strong>End Date:</strong> @Model.Course?.EndDate</p>
                    <p><strong>Summary:</strong> @Model.Course?.Summary</p>
                </div>
            </div>
</div>
        
        @* Participants *@
<div class="tab-pane fade" id="participants" role="tabpanel">
            <h5>Enroll a Student</h5>
            <form asp-action="EnrollStudentToCourse" method="post" class="row g-2 mb-3">
                <input type="hidden" name="courseId" value="@Model.Id" />
                <div class="col-md-6">
                    <select name="studentId" class="form-select" required>
                        <option value="">-- Select Student --</option>
                       @foreach (var student in ViewBag.instructorStudents as List<LMS.Models.Student> ?? new List<LMS.Models.Student>())
{
    <option value="@student.Id">@student.FirstName @student.LastName (@student.Grade)</option>
}
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-user-plus"></i> Enroll
                    </button>
                </div>
            </form>

            <h5 class="mt-4">Enrolled Students</h5>
            @if (Model.Enrollments != null && Model.Enrollments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped align-middle text-center">
                        <thead class="table-primary">
                            <tr>
                                <th>S.N.</th>
                                <th>Full Name</th>
                                <th>Date of Birth</th>
                                <th>Guardian Name</th>
                                <th>Grade</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sn = 1;
                                foreach (var enrollment in Model.Enrollments)
                                {
                                    var student = enrollment.Student;
                                    <tr>
                                        <td>@sn</td>
                                        <td>@(student?.FirstName) @(student?.MiddleName) @(student?.LastName)</td>
                                        <td>@student?.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                        <td>@student?.GuardianName</td>
                                        <td>@student?.Grade</td>
                                        <td>
                                            <a asp-controller="Student" asp-action="Edit" asp-route-id="@student!.Id"
                                                class="btn btn-sm btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id"
                                                class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                            <a asp-controller="Student" asp-action="Profile" asp-route-id="@student.Id"
                                                class="btn btn-sm btn-outline-info" title="Profile">
                                                <i class="fas fa-user-circle"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    sn++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">No students enrolled yet.</div>
            }
</div>

        @* Materials *@
<div class="tab-pane fade" id="materials" role="tabpanel">
            <h5 class="mb-3">Course Materials</h5>

            @* Filter out assignment materials - only show materials not linked to assignments *@
            @{
                var assignmentMaterials = Model.Assignments?
                    .SelectMany(a => a.Materials ?? new List<LMS.Models.Material>())
                    .ToList() ?? new List<LMS.Models.Material>();

                var courseMaterials = Model.Materials?
                    .Where(m => !assignmentMaterials.Contains(m))
                    .ToList() ?? new List<LMS.Models.Material>();
            }

            @if (courseMaterials.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 g-3 mb-4">
                    @foreach (var material in courseMaterials)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title">@material.Title</h6>
                                    @if (!string.IsNullOrEmpty(material.Description))
                                    {
                                        <p class="text-muted small">@material.Description</p>
                                    }
                                    <p class="small mt-auto"><i class="fas fa-clock"></i> Uploaded:
                                        @material.UploadDate.ToString("yyyy-MM-dd hh:mm tt")</p>
                                </div>
                                <div class="card-footer d-flex justify-content-between">
                                    <button type="button" class="btn btn-sm btn-outline-success preview-btn"
                                        data-file="~/@material.FilePath" data-type="@material.FileType">
                                        <i class="fas fa-eye"></i> View
                                    </button>
                                    <a href="~/@material.FilePath" download class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">No course materials uploaded yet.</div>
            }

            <!-- Add Material Form Toggle -->
            <button class="btn btn-info btn-sm mb-3" type="button" data-bs-toggle="collapse"
                data-bs-target="#addMaterialForm">
                <i class="fas fa-plus-circle"></i> Add Course Material
            </button>

            <!-- Add Material Form -->
            <div class="collapse" id="addMaterialForm">
                <h5 class="mb-3">Upload New Material</h5>
                
                <div class="card card-body shadow-sm border-0">
                    <form asp-action="AddMaterial" asp-controller="Instructor" method="post"
                        enctype="multipart/form-data" class="row g-3">
                        <input type="hidden" name="CourseId" value="@Model.Id" />
                        <input type="hidden" name="IsAssignmentMaterial" value="false" />

                        <div class="col-md-6">
                            <label class="form-label">Title</label>
                            <input type="text" name="Title" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Description</label>
                            <input type="text" name="Description" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Upload File</label>
                            <input type="file" name="File" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Upload Date</label>
                            <input type="text" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")"
                                readonly />
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-upload"></i> Upload Material
                            </button>
                        </div>
                    </form>
                </div>
            </div>
</div>

        @* Assignments *@
<div class="tab-pane fade" id="assignments" role="tabpanel">
    <h5>Assignments</h5>
    @if (Model.Assignments != null && Model.Assignments.Any())
    {
        <ul class="list-group mb-3">
            @foreach (var assignment in Model.Assignments)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@assignment.Title</strong>
                        <div class="small text-muted">@assignment.Description</div>
                        <div class="small">Due: @assignment.DueDate.ToShortDateString()</div>
                    </div>
                    <a asp-action="ViewSubmissions" asp-route-assignmentId="@assignment.Id"
                       class="btn btn-primary btn-sm">
                        <i class="fas fa-file-alt"></i> View Submissions
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-info">No assignments given yet.</div>
    }

    <div class="d-flex gap-2 mb-4">
        <a asp-action="GiveAssignment" asp-route-courseId="@Model.Id" class="btn btn-warning btn-sm">
            <i class="fas fa-tasks"></i> Give Assignment
        </a>
    </div>

    <h5>Quizzes</h5>
    @if (Model.Quizzes != null && Model.Quizzes.Any())
    {
        <ul class="list-group mb-3">
            @foreach (var quiz in Model.Quizzes)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@quiz.Title</strong>
                        <div class="small text-muted">@quiz.Description</div>
                        <div class="small">Due: @quiz.DueDate.ToShortDateString()</div>
                        <div class="badge bg-@(quiz.Type == LMS.Models.QuizType.AI ? "success" : "info")">
                            @(quiz.Type == LMS.Models.QuizType.AI ? "AI Generated" : "Manual")
                        </div>
                    </div>
                    <a asp-action="ViewQuiz" asp-route-quizId="@quiz.Id"
                       class="btn btn-success btn-sm">
                        <i class="fas fa-question-circle"></i> View Quiz
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-info">No quizzes created yet.</div>
    }

    <div class="d-flex gap-2">
       <a asp-controller="Quiz" asp-action="AutoQuiz" asp-route-courseId="@Model.Id" class="btn btn-outline-success btn-sm">
    <i class="fas fa-magic"></i> Auto Quiz (AI)
</a>

<a asp-controller="Quiz" asp-action="ManualQuiz" asp-route-courseId="@Model.Id" class="btn btn-outline-primary btn-sm">
    <i class="fas fa-edit"></i> Manual Quiz
</a>

    </div>
</div>



@* chat tab *@
<div class="tab-pane fade" id="chat" role="tabpanel">
    <div class="card">
        <div class="card-header bg-info text-dark">
            <i class="fas fa-comments"></i> Course Chat
        </div>

        <div class="card-body" style="height:400px; overflow-y:auto; background:#f9f9f9;" id="chatWindow">
            @foreach (var msg in chatMessages)
            {
                var isSender = msg.User!.Username == User.Identity!.Name;
                <div class="message @(isSender ? "sender" : "receiver")">
                    <b>@msg.User.Username</b>: @msg.Message
                    <span class="text-muted">(@msg.SentAt.ToShortTimeString())</span>
                </div>
            }
        </div>

        <div class="card-footer d-flex">
            <input type="text" id="chatInput" class="form-control" placeholder="Type a message..." />
            <button class="btn btn-primary ms-2" id="sendButton">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>
</div>

   


<!-- Live Classes Tab Content -->
<div class="tab-pane fade @(ViewContext.HttpContext.Request.Query["tab"] == "live-classes" ? "show active" : "")"
     id="live-classes" role="tabpanel" aria-labelledby="live-classes-tab">

    @* Validation Errors *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    @* Success/Error Messages *@
    @if (TempData["SuccessLiveClass"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessLiveClass"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorLiveClass"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorLiveClass"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Live Classes</h5>
    </div>

    <!-- Schedule New Live Class Form -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-video me-2"></i>Schedule a Live Class
        </div>
        <div class="card-body">
            <form asp-action="AddLiveClass" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="CourseId" value="@Model.NewLiveClass.CourseId" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label" for="Title">Title</label>
                        <input name="Title" id="Title" value="@Model.NewLiveClass.Title" class="form-control" placeholder="Enter class title" required />
                        <span asp-validation-for="NewLiveClass.Title" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="StartTime">Start Time</label>
                        <input name="StartTime" id="StartTime" type="datetime-local"
                               value="@(Model.NewLiveClass.StartTime == DateTime.MinValue ? DateTime.Now.ToString("yyyy-MM-ddTHH:mm") : Model.NewLiveClass.StartTime.ToString("yyyy-MM-ddTHH:mm"))"
                               class="form-control" required />
                        <span asp-validation-for="NewLiveClass.StartTime" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="EndTime">End Time</label>
                        <input name="EndTime" id="EndTime" type="datetime-local"
                               value="@(Model.NewLiveClass.EndTime == DateTime.MinValue ? DateTime.Now.AddHours(1).ToString("yyyy-MM-ddTHH:mm") : Model.NewLiveClass.EndTime.ToString("yyyy-MM-ddTHH:mm"))"
                               class="form-control" required />
                        <span asp-validation-for="NewLiveClass.EndTime" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label class="form-label" for="Description">Description</label>
                        <textarea name="Description" id="Description" class="form-control" rows="3" placeholder="Optional description">@Model.NewLiveClass.Description</textarea>
                        <span asp-validation-for="NewLiveClass.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-calendar-plus me-2"></i>Schedule Class
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Live Classes List -->
    @if (Model.LiveClasses != null && Model.LiveClasses.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <i class="fas fa-list me-2"></i>Scheduled Live Classes
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var live in Model.LiveClasses.OrderBy(l => l.StartTime))
                        {
                            <tr>
                                <td>@live.Title</td>
                                <td>@live.StartTime.ToString("g")</td>
                                <td>@live.EndTime.ToString("g")</td>
                                <td>@(string.IsNullOrEmpty(live.Description) ? "No description" : live.Description)</td>
                                <td>
                                    @if (live.IsCompleted)
                                    {
                                        <span class="badge bg-secondary">Completed</span>
                                    }
                                    else if (live.IsLive)
                                    {
                                        <span class="badge bg-success">Live</span>
                                    }
                                    else if (live.StartTime > DateTime.Now)
                                    {
                                        <span class="badge bg-warning text-dark">Upcoming</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Ready to Start</span>
                                    }
                                </td>
                                <td>
                                    @if (!live.IsCompleted)
                                    {
                                        <a asp-action="JoinLiveClass" asp-route-id="@live.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-door-open me-1"></i>Join
                                        </a>
                                    }
                                    <form asp-action="DeleteLiveClass"
      asp-route-id="@live.Id"
      method="post"
      style="display:inline;">
    @Html.AntiForgeryToken()
    <button type="submit"
            class="btn btn-sm btn-danger"
            onclick="return confirm('Are you sure you want to delete this class?');">
        <i class="fas fa-trash-alt me-1"></i> Delete
    </button>
</form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> No live classes scheduled yet. Schedule one using the form above.
        </div>
    }
</div>

  


        @* Edit Course *@
<div class="tab-pane fade" id="editcourse" role="tabpanel" aria-labelledby="editcourse-tab">
            <h5 class="mb-3">Edit Course Details</h5>
            <form asp-action="EditCourse" method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@Model.Course?.Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Full Name</label>
                        <input class="form-control" name="FullName" value="@Model.Course?.FullName" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Short Name</label>
                        <input class="form-control" name="ShortName" value="@Model.Course?.ShortName" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Category</label>
                        <input class="form-control" name="Category" value="@Model.Course?.Category" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Course ID Number</label>
                        <input class="form-control" name="CourseIdNumber" value="@Model.Course?.CourseIdNumber" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Start Date</label>
                        <input type="date" class="form-control" name="StartDate"
                               value="@Model.Course?.StartDate.ToString("yyyy-MM-dd")" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">End Date</label>
                        <input type="date" class="form-control" name="EndDate"
                               value="@Model.Course?.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>

                    <div class="col-12">
                        <label class="form-label">Summary</label>
                        <textarea class="form-control" name="Summary">@Model.Course?.Summary</textarea>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Course Image</label>
                        <input type="file" class="form-control" name="ImageFile" />
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary mt-3">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                    </div>
                </div>
            </form>
</div>


    </div>
</div> 

<style>
    .tab-content h5 {
        margin-top: 1rem;
    }

    .list-group-item {
        font-size: 0.95rem;
    }

    .breadcrumb i {
        margin-right: 4px;
    }

    .card-title {
        font-weight: 600;
        font-size: 1rem;
    }

    .card-footer .btn {
        width: 48%;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    /* Chat bubble styles */
    #chatWindow div.message {
        max-width: 70%;
        padding: 8px 12px;
        margin: 5px 0;
        border-radius: 15px;
        clear: both;
        word-wrap: break-word;
    }

    #chatWindow div.message.sender {
        background-color: #007bff;
        color: white;
        margin-left: auto; /* right side */
        text-align: right;
    }

    #chatWindow div.message.receiver {
        background-color: #f1f1f1;
        color: black;
        margin-right: auto; /* left side */
        text-align: left;
    }

    #chatWindow {
        display: flex;
        flex-direction: column;
    }
</style>


@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.11/signalr.min.js"></script>

<script>
document.addEventListener("DOMContentLoaded", function () {
    // --- Preview Button Logic ---
    const previewButtons = document.querySelectorAll(".preview-btn");
    const previewContainer = document.getElementById("previewContainer");

    previewButtons.forEach(button => {
        button.addEventListener("click", function () {
            const filePath = button.getAttribute("data-file").replace("~", "");
            const fileType = button.getAttribute("data-type").toLowerCase();
            let content = "";

            if (fileType === ".pdf") {
                content = `<iframe src="${filePath}" width="100%" height="600px" frameborder="0"></iframe>`;
            } else if (fileType === ".mp4") {
                content = `<video width="100%" controls><source src="${filePath}" type="video/mp4">Your browser does not support video.</video>`;
            } else if ([".jpg", ".jpeg", ".png", ".gif"].includes(fileType)) {
                content = `<img src="${filePath}" class="img-fluid" />`;
            } else {
                content = `<p class="text-danger">Preview not supported for this file type.</p>`;
            }

            previewContainer.innerHTML = content;
            const modal = new bootstrap.Modal(document.getElementById("materialPreviewModal"));
            modal.show();
        });
    });

    // --- Tab Persistence Logic ---
    const tabButtons = document.querySelectorAll('#courseTab button[data-bs-toggle="tab"]');
    const activeTabLabel = document.getElementById('activeTabLabel');
    const storedTabId = localStorage.getItem('activeCourseTabId');

    if (storedTabId) {
        const storedTab = document.querySelector(`#courseTab button#${storedTabId}`);
        if (storedTab) new bootstrap.Tab(storedTab).show();
    } else {
        new bootstrap.Tab(document.querySelector('#courseTab button')).show();
    }

    tabButtons.forEach(btn => {
        btn.addEventListener('shown.bs.tab', function (e) {
            const tabText = e.target.textContent.trim();
            const icon = e.target.querySelector('i')?.outerHTML || '';
            activeTabLabel.innerHTML = `${icon} ${tabText}`;
            localStorage.setItem('activeCourseTabId', e.target.id);
        });
    });

    // --- SweetAlert Messages ---
    function showAlert(type, message) {
        Swal.fire({
            icon: type,
            title: type === 'success' ? 'Success' : 'Error',
            text: message
        });
    }

    @* Razor TempData checks *@
    @if (TempData["SuccessEnroll"] != null)
    {
        <text>showAlert('success', '@TempData["SuccessEnroll"]');</text>
    }
    @if (TempData["ErrorMessageEnroll"] != null)
    {
        <text>showAlert('error', '@TempData["ErrorMessageEnroll"]');</text>
    }
    @if (TempData["SuccessEditCourse"] != null)
    {
        <text>showAlert('success', '@TempData["SuccessEditCourse"]');</text>
    }
    @if (TempData["SuccessMaterials"] != null)
    {
        <text>showAlert('success', '@TempData["SuccessMaterials"]');</text>
    }
    @if (TempData["SuccessAssignment"] != null)
    {
        <text>showAlert('success', '@TempData["SuccessAssignment"]');</text>
    }
    @if (TempData["SuccessGrade"] != null)
    {
        <text>showAlert('success', '@TempData["SuccessGrade"]');</text>
    }
    @if (TempData["SuccessLiveClass"] != null)
    {
        <text>showAlert('success', '@TempData["SuccessLiveClass"]');</text>
    }
    @if (TempData["ErrorLiveClass"] != null)
    {
        <text>showAlert('error', '@TempData["ErrorLiveClass"]');</text>
    }
      @if (TempData["SuccessDeleteClass"] != null)
    {
        <text>showAlert('success', '@TempData["SuccessDeleteClass"]');</text>
    }

    // --- Chat / SignalR Logic ---
    const chatWindow = document.getElementById("chatWindow");
    const chatInput = document.getElementById("chatInput");
    const sendButton = document.getElementById("sendButton");

    if (chatWindow && chatInput && sendButton) {
        const userName = "@User.Identity!.Name";
        const courseId = "@Model.Id";

        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .build();

        connection.on("ReceiveMessage", (user, message, time) => {
            const div = document.createElement("div");
            div.classList.add("message");
            div.classList.add(user === userName ? "sender" : "receiver");
            div.innerHTML = `<b>${user}</b>: ${message} <span class="text-muted">(${time})</span>`;
            chatWindow.appendChild(div);
            chatWindow.scrollTop = chatWindow.scrollHeight;
        });

        connection.start().then(() => console.log("SignalR connected"))
            .catch(err => console.error("SignalR error:", err));

        function sendMessage() {
            const message = chatInput.value.trim();
            if (!message) return;

            fetch("/api/Chat/SaveMessage", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ courseId, message })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    chatInput.value = "";
                    connection.invoke("SendMessage", data.user, data.message, data.time)
                        .catch(err => console.error(err));
                } else {
                    console.error("Message not saved:", data.error);
                }
            })
            .catch(err => console.error("Fetch error:", err));
        }

        sendButton.addEventListener("click", sendMessage);
        chatInput.addEventListener("keydown", e => {
            if (e.key === "Enter") {
                e.preventDefault();
                sendMessage();
            }
        });
    }
});
