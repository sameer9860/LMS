@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
    var today = DateTime.Now.ToString("dddd, MMMM dd, yyyy");
}

<div class="row g-4 mb-4">
    <div class="col-12 col-md-4">
        <a href="@Url.Action("Course", "Instructor")" class="text-decoration-none">
            <div class="card bg-gradient-primary hover-lift text-center h-100">
                <div class="card-body py-4">
                    <i class="fas fa-book fa-3x mb-3 opacity-75"></i>
                    <div class="section-title text-white">TOTAL COURSES</div>
                    <div class="display-5 fw-bold">@ViewBag.TotalCourses</div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-4">
        <div class="card bg-gradient-danger hover-lift text-center h-100">
            <div class="card-body py-4">
                <i class="fas fa-users fa-3x mb-3 opacity-75"></i>
                <div class="section-title text-white">TOTAL STUDENTS</div>
                <div class="display-5 fw-bold">@ViewBag.TotalEnrolledStudents</div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-4">
        <div class="card hover-lift text-center h-100">
            <div class="card-body py-4">
                <i class="fas fa-calendar-alt fa-3x mb-3 text-primary"></i>
                <div class="section-title">TODAY</div>
                <div class="fw-semibold">@today</div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="section-title">Your Courses & Enrolled Students</h6>
                <p class="text-muted small mb-0">Instructors can view their own courses and enrolled students from the <a href="@Url.Action("Course", "Instructor")">Courses</a> page. Chart views are available to administrators only.</p>
            </div>
        </div>
    </div>
</div>
