@{
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
    var today = DateTime.Now.ToString("dddd, MMMM dd, yyyy");
}
<style>
       a.card:hover {
        background-color: #1eaf3d;
        color: #822849;
        text-decoration: none;
    }
</style>

<div class="container mt-4">
    <div class="row g-4">
        <!-- Stats Cards -->
       <div class="col-md-4">
    <a href="@Url.Action("Course", "Instructor")" style="text-decoration:none;">
        <div class="card shadow border-0 text-center" style="background: #2563eb; color: #fff; cursor:pointer;">
            <div class="card-body py-4">
                <i class="fas fa-book fa-2x mb-3"></i>
                <h6 class="card-title mb-2" style="font-size: 1.05rem;">Total Courses</h6>
                <span class="fw-bold" style="font-size: 2rem;">@ViewBag.TotalCourses</span>
            </div>
        </div>
    </a>
</div>

        <div class="col-md-4">
            <div class="card shadow border-0 text-center" style="background: #ef4444; color: #fff;">
                <div class="card-body py-4">
                    <i class="fas fa-users fa-2x mb-3"></i>
                    <h6 class="card-title mb-2" style="font-size: 1.05rem;">Total Enrolled Students</h6>
                    <span class="fw-bold" style="font-size: 2rem;">@ViewBag.TotalEnrolledStudents</span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow border-0 text-center" style="background: #f0f4fa;">
                <div class="card-body py-4">
                    <i class="fas fa-calendar-alt fa-2x mb-3 text-primary"></i>
                    <h6 class="card-title mb-2" style="font-size: 1.05rem;">Today</h6>
                    <span class="fw-bold" style="font-size: 1.2rem; color: #2563eb;">@today</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Calendar and Activity Chart -->
    <div class="row mt-4">
        <!-- Calendar -->
        <div class="col-md-6">
            <div class="card shadow border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <button id="prevMonth" class="btn btn-outline-secondary btn-sm">
                            <i class="fa fa-chevron-left"></i>
                        </button>
                        <h5 id="calendarMonthYear" class="mb-0 fw-semibold"></h5>
                        <button id="nextMonth" class="btn btn-outline-secondary btn-sm">
                            <i class="fa fa-chevron-right"></i>
                        </button>
                    </div>
                    <table class="table table-bordered text-center mb-0" style="font-size:0.9rem; table-layout: fixed;">
                        <thead class="table-light">
                            <tr>
                                <th class="text-danger">S</th>
                                <th>M</th>
                                <th>T</th>
                                <th>W</th>
                                <th>T</th>
                                <th>F</th>
                                <th class="text-primary">S</th>
                            </tr>
                        </thead>
                        <tbody id="calendarBody"></tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Activity Chart -->
        <div class="col-md-6">
            <div class="card shadow border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Student Activity (Last 30 Days)</h5>
                    <canvas id="activityChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Students Activity Chart -->
    <div class="row mt-4 mb-5">
        <div class="col-md-8 mx-auto">
            <div class="card shadow border-0">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Top Active Students (Share of Activity)</h5>
                    <div style="height: 400px; display: flex; justify-content: center;">
                        <canvas id="studentActivityChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // --- Calendar Logic ---
    const calendarBody      = document.getElementById('calendarBody');
    const calendarMonthYear = document.getElementById('calendarMonthYear');
    const btnPrev           = document.getElementById('prevMonth');
    const btnNext           = document.getElementById('nextMonth');

    let currentDate = new Date();

    function generateCalendar(date) {
        const year          = date.getFullYear();
        const month         = date.getMonth();
        const firstDayIndex = new Date(year, month, 1).getDay();
        const daysInMonth   = new Date(year, month + 1, 0).getDate();

        calendarMonthYear.innerText = date.toLocaleString('default', { month: 'long', year: 'numeric' });

        calendarBody.innerHTML = '';
        let dayCounter = 1;

        for (let row = 0; row < 6; row++) {
            const tr = document.createElement('tr');
            for (let col = 0; col < 7; col++) {
                const td = document.createElement('td');
                if ((row === 0 && col < firstDayIndex) || dayCounter > daysInMonth) {
                    td.innerHTML = '&nbsp;';
                } else {
                    td.textContent = dayCounter;
                    const today = new Date();
                    if (dayCounter === today.getDate() && month === today.getMonth() && year === today.getFullYear()) {
                        td.classList.add('bg-primary', 'text-white', 'rounded-circle');
                    }
                    dayCounter++;
                }
                tr.appendChild(td);
            }
            calendarBody.appendChild(tr);
            if (dayCounter > daysInMonth) break;
        }
    }

    btnPrev.addEventListener('click', () => {
        currentDate.setMonth(currentDate.getMonth() - 1);
        generateCalendar(currentDate);
    });

    btnNext.addEventListener('click', () => {
        currentDate.setMonth(currentDate.getMonth() + 1);
        generateCalendar(currentDate);
    });

    document.addEventListener('DOMContentLoaded', () => generateCalendar(currentDate));

    // --- Chart Logic ---
    document.addEventListener("DOMContentLoaded", function () {
        fetch('/Instructor/GetActivityChartData')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('activityChart').getContext('2d');
                const labels = data.map(item => item.label);
                const counts = data.map(item => item.count);
                
                // Generate colors dynamically or use a preset
                const colors = [
                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40'
                ];

                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: labels,
                        datasets: [{
                            data: counts,
                            backgroundColor: colors.slice(0, labels.length),
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'bottom',
                            }
                        }
                    }
                });
            })
            .catch(error => console.error('Error fetching chart data:', error));

        // --- Student Activity Chart (Pie) ---
        fetch('/Instructor/GetStudentActivityDistribution')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('studentActivityChart').getContext('2d');
                const labels = data.map(item => item.label);
                const counts = data.map(item => item.count);
                
                // Color palette
                const colors = [
                    '#36A2EB', '#FF6384', '#4BC0C0', '#FF9F40', '#9966FF', 
                    '#FFCD56', '#C9CBCF', '#FF9F80', '#56CCF2', '#2D9CDB'
                ];

                new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: labels,
                        datasets: [{
                            data: counts,
                            backgroundColor: colors.slice(0, labels.length),
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'right',
                            }
                        }
                    }
                });
            })
            .catch(error => console.error('Error fetching student chart data:', error));
    });
</script>
}
